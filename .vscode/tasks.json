{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "ESLint: Fix All Issues",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:fix"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": ["$eslint-stylish"]
    },
    {
      "label": "Clean Unused Styles",
      "type": "shell",
      "command": "node",
      "args": ["scripts/remove-unused-styles.js", "${workspaceFolder}/src"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "Clean Current File Styles",
      "type": "shell",
      "command": "node",
      "args": ["scripts/remove-unused-styles.js", "${file}"],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      }
    },
    {
      "label": "Full Cleanup (ESLint + Styles)",
      "dependsOrder": "sequence",
      "dependsOn": ["ESLint: Fix All Issues", "Clean Unused Styles"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
